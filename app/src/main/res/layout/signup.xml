<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectanglecurve"
    tools:context=".signupactivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pbold"
        android:id="@+id/heading"
        android:layout_toRightOf="@+id/la"
        android:textSize="40sp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/la"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/la"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/heading"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/signupname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginHorizontal="20dp"
            android:textAlignment="gravity"
            android:drawableStart="@drawable/user"
            android:drawablePadding="20dp"
            android:fontFamily="@font/plight"
            android:hint="Name"
            android:textColor="@color/colorgrey" />

        <EditText
            android:id="@+id/signupmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signupname"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:textAlignment="viewStart"
            android:drawableStart="@drawable/mail"
            android:fontFamily="@font/plight"
            android:drawablePadding="20dp"
             android:hint="Email"
             android:textColor="@color/colorgrey" />

        <EditText
            android:id="@+id/signuppass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signupmail"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:drawableStart="@drawable/padlock"
            android:fontFamily="@font/plight"
            android:hint="Password"
            android:drawablePadding="20dp"
            android:textColor="@color/colorgrey" />

        <Button
            android:id="@+id/signupbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editround"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="25dp"
            android:fontFamily="@font/pbold"
            android:textColor="@color/colorwhite"
            android:text="SIGN UP"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pmedium"
            android:layout_marginTop="25dp"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:text="Already have an account ?"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linktologin"
            android:fontFamily="@font/pextrabold"
            android:textSize="15sp"
           android:textColor="#FFB940"
            android:text="  Log in"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/gmailsign"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/gmail"
                />

           <com.facebook.login.widget.LoginButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/signupfb"
           />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>