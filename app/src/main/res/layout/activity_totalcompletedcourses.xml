<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/rectanglecheck"
    android:layout_height="match_parent"
    tools:context=".totalcompletedcourses">

    <ImageButton
        android:id="@+id/checkpointback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/la" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="34dp"
        android:layout_toRightOf="@+id/checkpointback"
        android:fontFamily="@font/pmedium"
        android:text="Completed Courses"
        android:textColor="@color/colorwhite"
        android:textSize="30sp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/mrecyclerview"
        android:layout_marginTop="130dp"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

    </ScrollView>
</RelativeLayout>